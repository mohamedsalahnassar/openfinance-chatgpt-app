{
  "name": "openfinance-chatgpt-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/starter-kit",
    "apps/widgets",
    "apps/mcp-server"
  ],
  "scripts": {
    "dev": "concurrently -n kit,mcp -c blue,magenta \"npm run dev --prefix apps/starter-kit\" \"npm run dev --prefix apps/mcp-server\"",
    "dev:kit": "npm run dev --prefix apps/starter-kit",
    "dev:mcp": "npm run dev --prefix apps/mcp-server",
    "dev:callback": "node apps/callback-listener/server.js",
    "build:widgets": "npm run build --prefix apps/widgets",
    "test": "echo \"no tests yet\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
